    <script>

        $("#DepartmentTable").DataTable();

        $(".DepartmentEdit").on('click', function () {
            $("#DepartmentForm").attr('action', '/Master/UpdateDepartment');
            var id = $(this).attr("data-val");

            $("#Departmentsave").text("Update");
            GetDepartmentById(id);
        });

        function GetDepartmentById(id) {
            $.ajax({
                url: "/Master/GetDepartmentById?id=" + id,
                type: "GET",
                dataType: "json",
                contentType: "application/json;charset=UTF-8",
                success: function (result) {

                    if (result != null) {
                        $("#DepartmentId").val(result.DepartmentId);
                        $("#DepartmentName").val(result.DepartmentName);
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
                
            });
        }


        $(".DepartmentDelete").on('click', function () {
            var id = $(this).attr("data-val");
            if (confirm("Do You Want to Delete?")) {
                window.location.href = "/Master/DeleteDepartment?id=" + id;
            }
        });


        function ClearData() {
            var cnf = confirm("Are You Sure, You Want to Clear all the data?");
            if (cnf == true) {
                $("#DepartmentId").val('');
                $("#DepartmentName").val('');


                $("#DepartmentForm").attr('action', '/Master/AddDepartment');
                $("#Departmentsave").text("Save");

            }
        }

       
        function UpdateDepartment(id) {
            $("#DepartmentForm").attr('action', '/Master/UpdateDepartment');

            $("#Departmentsave").text("Update");
            GetDepartmentById(id);
        }


        function DeleteDepartment(id) {
            if (confirm("Do You Want to Delete?")) {
                window.location.href = "/Master/DeleteDepartment?id=" + id;
            }
        }

    </script>

  

