
@{
    ViewBag.Title = "StaffSalary";
}

<div class="right_col" role="main">
    <div class="row">
        <div class="col-sm-12">
            <form action="/Master/AddStaffSalary" method="post" id="Salaryform">
                <div class="col-sm-12" style="border-right:1px solid #eee;">
                    <div class="form-group">
                        <input type="hidden" id="Salary_Id" name="Salary_Id" />
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Staff Name</label>
                            <select class="form-control" id="Staff_ID" name="Staff_ID">
                                <option>---Select Staff---</option>
                                @{
                                    foreach (var item in ViewBag.staffdetails as IEnumerable<SchoolManagement.Data.Models.StafsDetails>)
                                    {
                                        <option value="@item.StafId">@item.Name</option>
                                    }
                                }
                            </select>
                            <input type="text" id="Staff_Name" name="Staff_Name" style="display:none" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label>Amount</label>
                        <div class="form-group">
                            <input type="text" id="Salary_Amount" name="Salary_Amount" class="form-control" />
                        </div>
                        <div class="form-group" style="text-align:right">
                            <button type="submit" class="btn btn-success" id="BtnSave">Save</button>
                        </div>
                    </div>
                </div>
            </form>
            <hr />
            <div class="col-md-12 col-sm-12 col-xs-12 table-responsive border-bottom">
                <table class="table table-bordered" id="TblSalary" style="margin-top:5px;">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Staff Name</th>
                            <th>Salary Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            foreach (var item in ViewBag.staffsalary as IEnumerable<SchoolManagement.Website.Models.Tbl_StaffSalary>)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Staff_Name</td>
                                    <td>@item.Salary_Amount</td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $("#TblSalary").DataTable();
</script>

