
@{
    ViewBag.Title = "StaffSalary";
}

<div class="right_col" role="main">
    <div class="row">
        <div class="col-sm-12">
            <form action="/Account/AddStaffSalary" method="post" id="Salaryform">
                <div class="col-sm-12" style="border-right:1px solid #eee;">
                    <div class="form-group">
                        <input type="hidden" id="Salary_Id" name="Salary_Id" />
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Staff Name</label>
                            <select class="form-control" id="Staff_ID" name="Staff_ID">
                                <option>---Select Staff---</option>
                                @{
                                    foreach (var item in ViewBag.staffdetails as IEnumerable<SchoolManagement.Data.Models.StafsDetails>)
                                    {
                                        <option value="@item.StafId">@item.Name</option>
                                    }
                                }
                            </select>
                            <input type="text" id="Staff_Name" name="Staff_Name" style="display:none" />
                        </div>
                        @*<div class="form-group">
                                <label>Basic Ammount</label>
                                <input type="text" id="Basic_Amount" name="Basic_Amount" class="form-control"/>
                            </div>*@
                    </div>
                    <div class="col-sm-6">
                        <label>Amount</label>
                        <div class="form-group">
                            <div><input type="text" id="Salary_Amount" name="Salary_Amount" class="form-control" /></div>
                        </div>
                        <div class="form-group" style="text-align:right">

                            @{
                                var data = ViewBag.Permission;
                                if (data != null)
                                {
                                    if (data == "true")
                                    {
                                        <button type="submit" class="btn btn-success" id="BtnsalarySave">Save</button>
                                    }
                                }
                            }

                        </div>
                    </div>
                </div>
            </form>
            <hr />
            <div class="col-md-12 col-sm-12 col-xs-12 table-responsive border-bottom">
                <table class="table table-bordered" id="TblSalary" style="margin-top:5px;">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Staff Name</th>
                            <th>Salary Amount</th>
                            @*<th>Basic</th>*@
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="Tblsalarybody">
                        @{
                            int i = 1;
                            foreach (var item in ViewBag.staffsalary as IEnumerable<SchoolManagement.Website.ViewModels.Tbl_Staffsalaryviewmodel>)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Staff_Name</td>
                                    <td>@item.Salary_Amount</td>
                                    @*<td>@item.Basic_Amount</td>*@
                                    <td>

                                        @{ 
                                            if(item.Editpermission == "true")
                                            {
                                        <button type="button" id="BtnEdit1" data-val="@item.Salary_Id" class="btn btn-success BtnEdit">Edit</button>
                                            }

                                            if(item.DeletePermission == "true")
                                            {
                                        <button type="button" id="BtnDelete1" class="btn btn-danger BtnDelete" data-val="@item.Salary_Id">Delete</button>
                                            }

                                        }

                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $("#TblSalary").DataTable();
    });
</script>

<script>
    $(".BtnEdit").on('click', function () {
        var id = $(this).attr("data-val");
        $("#Salaryform").attr('action', '/Account/EditSalary');
        $("#BtnsalarySave").text("Update");
        GetSalaryDataById(id);
    });

    function GetSalaryDataById(id) {
        $.ajax({
            url: "/Account/GetSalaryDataById?Id=" + id,
            type: "GET",
            dataType: "json",
            contentType: "applicaton/json;charset=utf-8",
            success: function (result) {
                if (result != null) {
                    $("#Salary_Id").val(result.Salary_Id);
                    $("#Staff_ID").val(result.Staff_ID);
                    $("#Staff_Name").val(result.Staff_Name);
                    $("#Basic_Amount").val(result.Basic_Amount);
                    $("#Salary_Amount").val(result.Salary_Amount);
                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
</script>
<script>
    $(".BtnDelete").on('click', function () {
        var id = $(this).attr("data-val");
        var cnf = confirm("Are You Sure, You Want to Delete the data?");
        if (cnf == true) {
            window.location.href = "/Account/DeleteSalary?Id=" + id;
        }
    });
</script>
