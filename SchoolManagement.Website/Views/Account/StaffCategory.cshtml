
@{
    ViewBag.Title = "StaffCategory";
}

<div class="right_col" role="main">
    <div class="row">
        <div class="col-sm-12">
            <form action="/Account/AddStaffCategory" method="post" id="Basicpayform">
                <div class="col-sm-12" style="border-right:1px solid #eee;">
                    <div class="form-group">
                        <input type="hidden" id="Staff_Category_Id" name="Staff_Category_Id" />
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Account Type</label>
                            <input type="text" id="Category_Name" name="Category_Name" class="form-control" />
                        </div>
                        <div class="form-group" style="text-align:right">
                            @{
                                var data = ViewBag.Permission;
                                if (data != null)
                                {
                                    if (data == "true")
                                    {
                                        <button type="submit" class="btn btn-success" id="BtnBasicSave">Save</button>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <hr />
        <div class="col-md-12 col-sm-12 col-xs-12 table-responsive border-bottom">
            <table class="table table-bordered" id="TblAccounttype" style="margin-top:5px;">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Category Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                        foreach (var item in ViewBag.BasicDetails as IEnumerable<SchoolManagement.Website.ViewModels.Tbl_Staffcategoryviewmodel>)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.Category_Name</td>
                                <td>
                                    @{
                                        if (item.Editpermission == "true")
                                        {
                                            <button class="btn btn-success AccounttypeEdit" id="BtnBasicEdit1" data-val="@item.Staff_Category_Id">Edit</button>
                                        }

                                        if (item.DeletePermission == "true")
                                        {
                                            <button class="btn btn-danger AccounttypeDelete" id="BtnBasicDelete1" data-val="@item.Staff_Category_Id">Delete</button>
                                        }
                                    }
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#TblAccounttype").DataTable();

    })

    $(".AccounttypeEdit").on('click', function () {
        var id = $(this).attr("data-val");

        $("#Basicpayform").attr('action', '/Account/UpdateStaffCategory');
        $("#BtnBasicSave").text("Update");
        GetBasicpaydetailsById(id);

    });

    function GetBasicpaydetailsById(id) {
        $.ajax({
            url: "/Account/GeStaffCategoryById?id=" + id,
            type: "GET",
            dataType: "json",
            contentType: "application/json;charset=utf-8",
            success: function (result) {
                $("#Staff_Category_Id").val(result.Staff_Category_Id);
                $("#Category_Name").val(result.Category_Name);


            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }


    $(".AccounttypeDelete").on('click', function () {
        var id = $(this).attr("data-val");

        var cnf = confirm("Are You Sure,You Want to Delete?");
        if (cnf == true) {
            window.location.href = "/Account/DeleteStaffCategory?id=" + id;
        }

    });
</script>