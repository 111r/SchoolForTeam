
@{
    ViewBag.Title = "BasicPay";
}

<div class="right_col" role="main">
    <div class="row">
        <div class="col-sm-12">
            <form action="/Account/AddBasicPay" method="post" id="Basicpayform">
                <div class="col-sm-12" style="border-right:1px solid #eee;">
                    <div class="form-group">
                        <input type="hidden" id="BasicAmount_Id" name="BasicAmount_Id" />
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Basic Pay</label>
                            <select class="form-control" id="BasicPay_Id" name="BasicPay_Id">
                                <option>---Select BasicPay---</option>
                                @{
                                    foreach (var item in ViewBag.Basicpaydetails as IEnumerable<SchoolManagement.Website.Models.Tbl_BasicpayMaster>)
                                    {
                                        <option value="@item.BasicPay_MasterId">@item.Basicpay_Name</option>
                                    }
                                }
                            </select>
                            <input type="text" id="Basicpay_Name" name="Basicpay_Name" style="display:none" />
                        </div>
                        @*<div class="form-group">
                                <label>Basic Pay</label>
                                <select class="form-control" id="AccountType_Id" name="AccountType_Id">
                                    <option>---Select AccountType---</option>
                                    @{
                                        foreach (var item in ViewBag.AccountType as IEnumerable<SchoolManagement.Data.Models.Tbl_DataListItem>)
                                        {
                                            <option value="@item.DataListItemId">@item.DataListItemName</option>
                                        }
                                    }
                                </select>
                                <input type="text" id="AccountType_Name" name="AccountType_Name" style="display:none" />
                            </div>*@
                    </div>

                    <div class="col-sm-6">
                        <label>Percentage</label>
                        <div class="form-group">
                            <input type="text" id="Basic_Amount" name="Basic_Amount" class="form-control" />
                        </div>
                        <div class="form-group" style="text-align:right">
                            @{
                                var data = ViewBag.Permission;
                                if (data != null)
                                {
                                    if (data == "true")
                                    {
                                        <button type="submit" class="btn btn-success" id="BtnBasicSave">Save</button>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <hr />
        <div class="col-md-12 col-sm-12 col-xs-12 table-responsive border-bottom">
            <table class="table table-bordered" id="TblBasicPay" style="margin-top:5px;">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Basic Pay</th>
                        <th>Percentage</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                        foreach (var item in ViewBag.BasicPayList as IEnumerable<SchoolManagement.Website.ViewModels.TblBasicpadetailviewmodel>)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.Basicpay_Name</td>
                                <td>@item.Basic_Amount %</td>
                                <td>
                                    @{
                                        if (item.Editpermission == "true")
                                        {
                                            <button class="btn btn-success BtnBasicEdit" id="BtnBasicEdit1" data-val="@item.BasicAmount_Id">Edit</button>
                                        }

                                        if (item.DeletePermission == "true")
                                        {
                                            <button class="btn btn-danger BtnBasicDelete" id="BtnBasicDelete1" data-val="@item.BasicAmount_Id">Delete</button>
                                        }
                                    }
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
    $("#TblBasicPay").DataTable();

    })
</script>

<script>
    $(".BtnBasicEdit").on('click', function () {
        var id = $(this).attr("data-val");

        $("#Basicpayform").attr('action', '/Account/BasicpayEdit');
        $("#BtnBasicSave").text("Update");
        GetBasicPayById(id);

    });

    function GetBasicPayById(id) {
        $.ajax({
            url: "/Account/GetBasicPayById?Id=" + id,
            type: "GET",
            dataType: "json",
            contentType: "application/json;charset=utf-8",
            success: function (result) {
                $("#BasicAmount_Id").val(result.BasicAmount_Id);
                $("#BasicPay_Id").val(result.BasicPay_Id);
                $("#Basicpay_Name").val(result.Basicpay_Name);
                $("#Basic_Amount").val(result.Basic_Amount);

            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }

</script>

<script>
    $(".BtnBasicDelete").on('click', function () {
        var id = $(this).attr("data-val");

        var cnf = confirm("Are You Sure,You Want to Continue?");
        if (cnf == true) {
            window.location.href = "/Account/DeleteBasicPay?Id=" + id;
        }

    });
</script>