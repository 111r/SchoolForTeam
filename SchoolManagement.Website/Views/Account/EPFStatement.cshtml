<script>
    //$("#TblSalaryStatement").DataTable();


    $("#BtnPrint").on('click', function () {

        $("#PrintTable").printThis();
    });

    $("#BtnFilter").on('click', function () {
        //var account_Id = $("#Account_Id").val();
        //alert(account_Id);
        var Date = $("#Date").val();

        if (Date == "") {
            alert("Please Select Account and Date");
        }
        else {
            var html = "";
            $.ajax({
                url: "/Account/FilterEPFData?Date=" + Date,
                //data: {  Date: Date },
                type: "GET",
                dataType: "json",
                contentType: "application/json;charset=UTF-8",
                success: function (result) {
                    //alert(result.count);
                    if (result != null && result != "") {
                        var x = 1;
                        var TotalGross = 0;
                        var TotalEpf = 0;
                        var TotalEps = 0;
                        var TotalEdli = 0;
                        var TotalEpfcontri = 0;
                        var TotalEpscontri = 0;
                        var epsandepf = 0;
                        var Ncp = 0;
                        var refund = 0;


                        for (var i = 0; i < result.length; i++) {
                            html += "<tr>";
                            html += "<td>" + x + "</td>";
                            html += "<td>" + result[i].UIN + "</td>";
                            html += "<td>" + result[i].Employee_Name + "</td>";
                            html += "<td>" + result[i].Gross_Wages + "</td>";
                            TotalGross = TotalGross + result[i].Gross_Wages;
                            html += "<td>" + result[i].Epf_Wages + "</td>";
                            TotalEpf = TotalEpf + result[i].Epf_Wages;
                            html += "<td>" + result[i].EPs_Wages + "</td>";
                            TotalEps = TotalEps + result[i].EPs_Wages;
                            html += "<td>" + result[i].EDLIWages + "</td>";
                            TotalEdli = TotalEdli + result[i].EDLIWages;
                            html += "<td>" + result[i].Employe_Contribution + "</td>";
                            TotalEpfcontri = TotalEpfcontri + result[i].Employe_Contribution;
                            html += "<td>" + result[i].EPS_Pension + "</td>";
                            TotalEpscontri = TotalEpscontri + result[i].EPS_Pension;
                            html += "<td>" + result[i].Employer_Contribution + "</td>";
                            epsandepf = epsandepf + result[i].Employer_Contribution;
                            html += "<td>" + result[i].NCP_Days + "</td>";
                            Ncp = Ncp + result[i].NCP_Days;
                            html += "<td>" + result[i].Refund_Advances + "</td>";
                            refund = refund + result[i].Refund_Advances;
                            html += "</tr>";
                            x++;
                        }

                        html += "<tr>";
                        html += "<td></td>";
                        html += "<td></td>";
                        html += "<td><b style='color:black'>Total</b></td>";
                        html += "<td><b style='color:black'>" + TotalGross + "</b></td>";
                        html += "<td><b style='color:black'>" + TotalEpf + "</b></td>";
                        html += "<td><b style='color:black'>" + TotalEps + "</b></td>";
                        html += "<td><b style='color:black'>" + TotalEdli + "</b></td>";
                        html += "<td><b style='color:black'>" + TotalEpfcontri + "</b></td>";
                        html += "<td><b style='color:black'>" + TotalEpscontri + "</b></td>";
                        html += "<td><b style='color:black'>" + epsandepf + "</b></td>";
                        html += "<td><b style='color:black'>" + Ncp + "</b></td>";
                        html += "<td><b style='color:black'>" + refund + "</b></td>";
                        html += "</tr>";


                        //$("#TblSalaryStatement").DataTable().destroy();
                        $("#TableBody").empty();
                        $("#TableBody").html(html);




                        //$("#TblSalaryStatement").DataTable();
                    } else {
                        alert("No Record");
                        window.location.reload();
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }

    });

    $("#ExcelDownload").on('click', function () {
        var Date = $("#Date").val();

        if (Date == "") {
            alert("Please Select the Date");
        }
        else {
            window.location.href = "/Account/ExportEPFStatement?date=" + Date;
        }

    });

</script>