<div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Change Password</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container" style="font-size:16px;">
                    <div class="row" style="padding:10px;">
                        <div style="width:40%;"><label>Enter Current Password</label></div>
                        <input type="text" id="staffIdmodelpass" style="display:none;" />
                        <input type="password" id="oldPass" class="changepasswordInput" placeholder="Current Password" />
                    </div>
                    <div class="row" style="padding:10px;">
                        <div style="width:40%;"><label>Enter New Password</label></div>
                        <input type="password" id="newPass" class="changepasswordInput" placeholder="New Password" />
                    </div>
                    <div class="row" style="padding:10px;">
                        <div style="width:40%;"><label>Confirm New Password</label></div>
                        <input type="password" id="confirmNewPass" class="changepasswordInput" placeholder="Confirm New Password" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="button" onclick="UpdatePassword('@Session["StudentId"].ToString()');">Update Password</button>
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>
    
    function UpdatePassword(studentid) {
        debugger
        $('#oldPass').parent().parent().find('span').remove();
        //var studentid = '@Session["StudentId"].ToString()';
        var stf = '@Session["StaffID"].ToString()';
        var roleName = '@Session["RoleName"].ToString()';
        
        //alert(studentid);
        var oldpass = $("#oldPass").val();
        var newpass = $("#newPass").val();
        var Confirmnewpass = $("#confirmNewPass").val();

        if (oldpass.length == 0 || newpass.length == 0 || Confirmnewpass.length == 0) {
            //alert("Please Fill The Mandatory Fields");
            $('#oldPass').parent().parent().append('<span style="color:red">Please Fill the mandatory fields</span>');
        }
        if (newpass != Confirmnewpass) {
            $('#oldPass').parent().parent().append('<span style="color:red">New Password and Confirm Password Did not match</span>');

            //alert("Password Did not Match");
        }
        
        var url = '';
        if (roleName == 'Staff') {
            url = "/Account/ChangeUserPasswordForStaff";
        }
        else if (roleName == 'Administrator')
        {
            
            var storedId = sessionStorage.getItem('clickedButtonId');
            stf = storedId; 
            var stdid = sessionStorage.getItem('clickedButtonId2');
            studId = stdid; 
            url = "/Account/ChangeUserPasswordForStaffByAdmin";
            
        }
        else {
            url = "/Account/ChangeUserPassword";
        }
        if (oldpass.length != 0 && newpass.length != 0 && Confirmnewpass != 0) {
            $.ajax({
                url: url,
                data: { oldpass: oldpass, newpass: newpass, Confirmnewpass: Confirmnewpass, staffId: stf, studentid: studId },
                type: "POST",
                dataType: "json",
                success: function (result) {
                    $("#oldPass").val('');
                    $("#newPass").val('');
                    $("#confirmNewPass").val('');
                    if (result.indexOf("Successfully") >= 0) {
                        $('#oldPass').parent().parent().append('<span class="model-success" style="color:red">' + result + '</span>');
                    }
                    else {
                        $('#oldPass').parent().parent().append('<span class="model-error" style="color:red">' + result + '</span>');
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }

    }
</script>