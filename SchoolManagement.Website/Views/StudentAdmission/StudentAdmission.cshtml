            var $tds = $item.find("td");
            //alert($tds[0].outerText);
            var StudentID = $tds[0].outerText;
            var StudentName = $tds[1].outerText;
            var LastName = $tds[2].outerText;
            var ApplicationNumber = $tds[3].outerText;
            var Course = $tds[4].outerText;
            //var admissionfee = $tds[4].outerText;
            var isapprove = $tds[5].outerText;
            var selectedindex = $tds[6].lastElementChild.options.selectedIndex;
            var selectedValue = $tds[6].firstChild[selectedindex].innerHTML;

            if (isapprove != selectedValue && selectedValue != "select") {
                objStudentAdmissionModel.StudentId = StudentID;
                objStudentAdmissionModel.StudentName = StudentName;
                objStudentAdmissionModel.ApplicationNumber = ApplicationNumber;
                objStudentAdmissionModel.Course = Course;
                objStudentAdmissionModel.isapprove = isapprove;
                objStudentAdmissionModel.AdmissionStatusID = selectedValue;
                objStudentAdmissionModel.Last_Name = LastName;

                $.ajax({
                    url: "/StudentAdmission/UpdatedStudentAdmissionStatus",
                    //  url: '/Fee/AddFeeReceipt1',
                    dataType: "json",
                    type: "POST",
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(objStudentAdmissionModel),
                    async: true,
                    processData: false,
                    cache: false,
                    success: function (data) {
                        if (data == "Success") {
                            alert("Updated Successfully");
                            window.location.reload();
                            $(this).prop('disabled', false);
                        } else {
                            alert("Please Fill the Class");
                            window.location.reload();
                            $(this).prop('disabled', false);
                        }
                       
                    },
                    error: function (xhr) {
                        alert("Not Updated");
                        window.location.reload();
                        $(this).prop('disbled', false);

                    }
                });
            }
            else {
                if (selectedValue == "select") {
                    alert("Please select any one admission status");
                }
                else {
                    alert("Student Already had the same status");
                }
            }

        });


