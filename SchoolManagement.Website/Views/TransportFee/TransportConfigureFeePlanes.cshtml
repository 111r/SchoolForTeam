@model IEnumerable<SchoolManagement.Data.Models.FeePlans>
@{
    /**/

    ViewBag.Title = "Configure Fee Planes";
}

<div class="right_col" role="main">
    <div class="row">
        <!-- row started -->
        <div class="col-md-12 col-sm-12 col-xs-12">
            <!-- col-msx-12 started -->
            <div class="dashboard_graph">
                <div class="row x_title">
                    <!--row x_title started -->
                    <div class="col-sm-12">
                        <!-- col-sm-12 started -->
                        <div class="col-sm-6">
                            <h4>Configure Fee Plans  &nbsp;<i class="fa fa-forward"></i></h4>
                        </div>
                        <div class="col-sm-6">
                            @*<button class="btn btn-info pull-right"><a href="sis_manage_student.html" class="button_a">Manage</a></button>*@
                            @*<button class="btn btn-danger pull-right"><a href="sis_add_new_student.html" class="button_a">Add New</a></button>*@
                        </div>
                    </div><!--row x_title closed -->

                </div><!-- dashboard_graph closed-->
            </div><!--col-msx-12 closed-->
        </div>
        <div class="col-sm-12">
            <!-- col-sm-12 started -->
            <h4 class="std_head well-sm">  Add New Configure Fee Plan</h4>
            <div class="col-sm-6" style="border-right: 1px solid #eee;">
                <!-- col-sm-6 started -->

                <div class="form-group">
                    <label>Select Fee Heading :</label>
                    @Html.DropDownList("FeeHeading", @ViewBag.FeeHeadings as SelectList, "Select", new { @class = "form-control" })
                </div>
                @*<div>
                    <label>Select Transport Option</label>
                    <select class="form-control" id="TransportOpt_Id">
                        <option>---Select Transport Option---</option>
                        @foreach(var item in ViewBag.TransportOptions as IEnumerable<SchoolManagement.Data.Models.Tbl_DataListItem>)
                        {
                            <option value="@item.DataListItemId">@item.DataListItemName</option>
                        }
                    </select>
                </div>*@
              


            </div><!-- col-sm-6 closed -->
            <div class="col-sm-6">
            <div class="form-group">
                <label>Select KmDistance</label>
                <select class="form-control" id="KmDistance_Id">
                    <option>---Select KmDistance---</option>
                    @foreach(var item in ViewBag.KmDistance as IEnumerable<SchoolManagement.Data.Models.Tbl_DataListItem>)
                    {
                        <option value="@item.DataListItemId">@item.DataListItemName</option>
                    }
                </select>
            </div>
                <div class="form-group">
                    <label>Fee Value :</label>
                    <input type="number" id="FeeValue" class="form-control">
                    @*@Html.DropDownList("Account", @ViewBag.Batches as SelectList, "Select", new { @class = "form-control" })*@
                </div>
              
                <div class="form-group">
                    <span id="FrequencyMessage" style="color:red"></span>
                </div>
            </div><!-- col-sm-6 closed -->
        </div>

        <div class="col-sm-12" style="border-bottom: 2px solid #b4b4b4;">
            @{
                var data = ViewBag.Permission;
                if (data != null)
                {
                    if (data == "true")
                    {
                        <button id="btnSubmit" class="btn btn-success pull-right">Save</button>
                    }
                }
            }
        </div>

        <div class="col-md-12 col-sm-12 col-xs-12 table-responsive border-bottom">
            <!-- col-msx-12 started -->
            <table class="table table-bordered" id="TblFeePlanes" style="margin-top:5px;">
                <thead>
                    <tr>
                        <th>S.No</th>
                        @*<th>Batch</th>*@
                        <th>KmDistance</th>
                        <th>Fee Heading</th>
                        <th>Value</th>
                        @*<th>Action</th>*@
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            @*<td>@item.BatchName</td>*@
                            <td>@item.KmDistance_Id</td>
                            <td>@item.FeeName</td>
                            <td>@item.FeeValue</td>
                            @*<td><a href="#" class="btn btn-success btn-sm" role="button">Edit</a> <button id="@item.FeeId" class="btn btn-danger btn-sm" role="button">Delete</button></td>*@
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div><!-- col-msx-12  closed -->
    </div>
</div>

@section scripts{
    <script>

        $('#allCategory').change(function () {

            if ($(this).prop('checked')) {
                $("input[name='category']").prop('checked', true);
            }
            else {
                $("input[name='category']").prop('checked', false);
            }
        });

        $('#allClassesCheck').change(function () {
            if ($(this).prop('checked')) {
                $("input[name='class']").prop('checked', true);
            }
            else {
                $("input[name='class']").prop('checked', false);
            }
        });

        $("#btnSubmit").on("click", function () {
            validation();
            //
            var feePlan = {};
            feePlan.feeHeadingId = $("#FeeHeading option:selected").val();
            feePlan.feeHeadingName = $("#FeeHeading option:selected").text();
            feePlan.feeValue = $("#FeeValue").val();
            feePlan.Transportopt_Id = $("#TransportOpt_Id").val();
            feePlan.KmDistance_Id = $("#KmDistance_Id").val();

            //feePlan.Course = $("#Courseddl option:selected").val();
            //feePlan.BatchName = $("#Batches option:selected").val();
            //if (feePlan.Course == '') {
            //    alert("Please Select Any Course");
            //    return false;
            //}
            //if (feePlan.BatchName == '') {
            //    alert("Please Select Any Batch Name");
            //    return false;
            //}
            

           

            $.ajax({
                url: '/Fee/ConfigureFeePlanes?Fee_Id=2',
                dataType: "json",
                type: "POST",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(feePlan),
                async: true,
                processData: false,
                cache: false,
                success: function (data) {
                    window.location.reload();
                },
                error: function (xhr) {
                }
            });
        });
        function validation() {
            if ($("#FeeHeading").val() == "" || $("#FeeHeading").text() == "Select") {
                $("#FeeHeading").css("border", "1px solid red");
                return;
            } else {
                $("#FeeHeading").css("border", "1px solid #b4b4b4");
            }

            if ($("#FeeValue").val() == "") {
                $("#FeeValue").css("border", "1px solid red");
                return;
            } else {
                $("#FeeValue").css("border", "1px solid #b4b4b4");
            }

            if ($("#Batches").val() == "" || $("#Batches").text() == "") {
                $("#Batches").css("border", "1px solid red");
                return;
            } else {
                $("#Batches").css("border", "1px solid #b4b4b4");
            }
            var classCheck = false;
            var categoryCheck = false;
            $.each($("input[name='class']:checked"), function () {
                if ($(this).prop('checked')) {
                    classCheck = true;
                }
            });
            $.each($("input[name='category']:checked"), function () {
                if ($(this).prop('checked')) {
                    categoryCheck = true;
                }
            });
            if (classCheck == false) {
                alert("Please select atleast 1 Class");
                return false;
            }
            if (categoryCheck == false) {
                alert("Please select atleast 1 category");
                return false;
            }

        }
    </script>
    <script>

        $('#TblFeePlanes').DataTable();

    </script>
}