@{
    ViewBag.Title = "FeeReceiptPreview";
    Layout = null;
    var sessionlist = ViewBag.session;
    var receiptid = ViewBag.Receiptid;
}

<!DOCTYPE html>

<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="icon" type="image/png" sizes="32x32" href="~/WebsiteImages/images/icons.png">
    <link href="~/Content/WebsiteCss/css/bootstrap.min.css" rel="stylesheet">
    @*<link href="~/Content/WebsiteCss/css/animate.min.css" rel="stylesheet">
        <link href="~/Content/WebsiteCss/css/custom.css" rel="stylesheet">
        <link href="~/Content/WebsiteCss/css/floatexamples.css" rel="stylesheet" type="text/css" />*@
    <link href="~/Content/WebsiteCss/css/A5Print/Style.css" rel="stylesheet" />
    <style>
        th, td {
            height: 30px;
            text-align: left;
            padding: 0px 5px 0px 5px;
        }

            td:first-child {
                padding-right: 10px;
            }

            tr, td:first-child {
                text-align: start;
            }

        body {
            padding: 20px;
        }

        #PrintBox {
            padding: 20px;
            page-break-after: always; /* Add page break after each print */
        }
    </style>

</head>

<body>
    <div class="container" style="height: 796px;width:556.8px; margin:5px 5px 5px 5px; padding:0px; font-size:medium;">
        <div class="row">
            <div class="col-sm-6">
                @*<div class="invoice-logo" style="text-align:left;padding:5px;">
                    <img src="~/WebsiteImages/img/logo.png" alt="logo icon" width="70px;" style="padding-top: 5px;" />
                </div>*@
            </div>
            <div class="col-sm-4">
                <div class="invoice-logo" style="text-align:center;padding:10px;">
                    @{
                        var data = ViewBag.Schoolsetup;
                        if (data != null)
                        {
                            <div class="col-md-2 col-sm-2 col-xs-2" style="margin-left:10px;">
                                @*<img src="~/WebsiteImages/SchoolImage/@data.Upload_Image" alt="logo icon" width="100px;" style="display:inline-block;padding-top: 25px;" />*@
                            </div>
                            <div class="col-md-8 col-sm-8  col-xs-8" style="text-align:center">
                                <h3 class="title-of-labprintHead">@data.School_Name</h3>
                                @*<h5 class="title-of-labprint" style="text-transform:uppercase">Carmel Teresa School, Hagadur Main Road,</h5>*@
                                <h5> @data.Address</h5>
                                <h6 class="title-of-labprint">Ph No: 91-(810)588-4917</h6>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-2 col-sm-2 col-xs-2" style="margin-left:10px;">
                                @*<img src="~/WebsiteImages/img/logo.png" alt="logo icon" width="100px;" style="display:inline-block;padding-top: 25px;" />*@
                            </div>
                            <div class="col-md-8 col-sm-8  col-xs-8" style="text-align:center">
                                <h3 class="title-of-labprintHead">CARMEL TERESA SCHOOL</h3>
                                <h5 class="title-of-labprint" style="text-transform:uppercase">Carmel Teresa School, Hagadur Main Road,</h5>
                                <h5> Whitefield, Bangalore-560066</h5>
                                <h6 class="title-of-labprint">Ph No: 91-(810)588-4917</h6>
                            </div>
                        }
                    }


                </div>
            </div>
        </div>

        <h4 style="text-align:center;"><b>Fee Receipt</b></h4>
        @*<hr style="height:4px;border-color:gray;margin:0px" />*@
        <hr style="width: 100%; text-align: left; margin-left: 0; border-color: gray;">

        <div class="row">
            <div class="col-sm-6" style="float: left; width: 50%;">
                <div class="Receipt no." style="padding:3px 0px 3px 10px;">
                    Bill Number: @ViewBag.receiptid
                </div>
            </div>
            <div class="col-sm-6" style="float: right; width: 50%;">
                <span class="date" style="text-align: right; padding:3px 0px;">
                    Name: @ViewBag.studentname
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6" style="float: left; width: 50%;">
                <div class="Receipt no." style="padding:3px 0px 3px 10px;">
                    ScholarNumber: @ViewBag.ScollarNumber
                </div>
            </div>
            <div class="col-sm-6" style="float: right; width: 50%;">
                <span class="date" style="text-align: right; padding: 3px 0px;">
                    Class Name: @ViewBag.ClassName
                </span>
            </div>           
        </div>
        <div class="row">
            <div class="col-sm-6" style="float: left; width: 50%;">
                <div class="Receipt no." style="padding:3px 0px 3px 10px;">
                    Mobile Number:  @ViewBag.ContactNo
                </div>
            </div>
            <div class="col-sm-6" style="float: right; width: 50%;">
                <span class="date" style="text-align: right; padding: 3px 0px;">

                    Bill Date:  @ViewBag.Date
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6" style="float: left; width: 50%;">
                <div class="Receipt no." style="padding:3px 0px 3px 10px;">
                    
                </div>
            </div>
            <div class="col-sm-6" style="float: right; width: 50%;">
                <span class="date" style="text-align: right; padding:3px 0px;">
                    
                </span>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <table style="font-size: 15px;">
                    <thead>
                        <tr style="border-bottom:3px solid;border-color:gray;">
                            <th>S.No.</th>
                            <th>Fee Types</th>
                            <th>Fee Ammounts</th>
                        </tr>
                    </thead>
                    <hr style="width: 100%; text-align: left; margin-left: 0; border-color: gray;">

                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var item in ViewBag.FeeReceiptsTbl as List<SchoolManagement.Website.ViewModels.PreviewFeeReceiptViewModel>)
                        {
                            <tr style="border-bottom: 2px solid #808080;">
                                <td>@i</td>
                                <td>@item.HeadingNames</td>
                                <td class="text-center">@item.HeadingPaidAmount</td>
                            </tr>
                            i++;
                        }
                        <tr style="display:none">
                            <td class="highrow"></td>
                            <td><strong>Sub Total:</strong></td>
                            <td class="text-center">@ViewBag.Total</td>
                        </tr>
                        <tr>
                            <td class="emptyrow"></td>
                            <td><strong>Paid:</strong></td>
                            <td class="text-center">@ViewBag.Total</td>
                        </tr>
                        @{
                            if (ViewBag.balanceamt > 0)
                            {
                                <tr>
                                    <td class="emptyrow"></td>
                                    <td><strong>Due Total:</strong></td>
                                    <td class="text-center">@ViewBag.balanceamt</td>
                                </tr>
                            }
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
        <hr style="width: 100%; border-color: gray; margin: 0px">
        <table style="font-size: 15px;">
            <tbody>
                @{
                                <tr>
                                    @*<td style="text-align:left;"><b>Net Amt :@ViewBag.Total </b></td>*@
                                    <td style="text-align:left;"><b>Paid Amt :@ViewBag.Total </b></td>
                                    <td style="text-align:left;"><b>Due Amt :@ViewBag.balanceamt </b></td>
                                    @*<td style="text-align:left;"><b>Net Payable :@ViewBag.Total </b></td>*@
                                    <td style="text-align:left;"><b>Discount Amt : @ViewBag.concessionamt </b></td>
                                </tr>
                   @* <tr>
                        <td style="text-align:left;"><b>Paid Amt :@ViewBag.Total </b></td>
                        <td style="text-align:left;"><b>Net Return : </b></td>
                        <td style="text-align:left;"><b>Due Amt :@ViewBag.balanceamt </b></td>
                    </tr>*@
                    <tr>
                        @*<td style="text-align:left;" colspan="3"><b>Amount in words : <label id="lblAmtInWords"></label></b></td>*@
                        <td style="text-align:left;" colspan="3"><b>Settled By : </b></td>
                    </tr>
                    @*<tr>
                        <td style="text-align:right;" colspan="3"><b>Settled By : </b></td>
                    </tr>*@
                }
            </tbody>

        </table>
    </div>

</body>

</html>
