@model SchoolManagement.Data.Models.TblFeeReceipts
@{
    ViewBag.Title = "Receipt Preview";
}

    <div class="right_col" role="main">
        <div class="row">
            <!-- row started -->
            <div class="col-sm-12">
                @*<div class="page-header">
                        <h1>Student Fee <small> Invoice</small></h1>
                    </div>*@
                <!-- Simple Invoice - START -->
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="text-center">
                                <i class="fa fa-search-plus pull-left icon"></i>
                                <h2>Student Fee Invoice (@Model.FeeReceiptId)</h2>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-xs-12 col-md-3 col-lg-3 pull-left">
                                    <div class="panel panel-success height">
                                        <div class="panel-heading"><b>Student Detail</b></div>
                                        <div class="panel-body">
                                            <strong>Name: </strong> @Model.StudentName<br>
                                            <strong>Class: </strong> @Model.ClassName<br>
                                            <strong>Category: </strong> @Model.CategoryName<br>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-3 col-lg-3">
                                    <div class="panel panel-success height">
                                        <div class="panel-heading"><b>Family Detail</b></div>
                                        <div class="panel-body">
                                            <strong>Card Name:</strong> Visa<br>
                                            <strong>Card Number:</strong> ***** 332<br>
                                            <strong>Exp Date:</strong> 09/2020<br>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-3 col-lg-3">
                                    <div class="panel panel-success height">
                                        <div class="panel-heading"><b>Payment Detail</b></div>
                                        <div class="panel-body">
                                            <strong>Gift:</strong> No<br>
                                            <strong>Express Delivery:</strong> Yes<br>
                                            <strong>Insurance:</strong> No<br>
                                            <strong>Coupon:</strong> No<br>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-3 col-lg-3 pull-right">
                                    <div class="panel panel-success height">
                                        <div class="panel-heading"><b>Fee Headings</b></div>
                                        <div class="panel-body">
                                            <strong>David Peere:</strong><br>
                                            1111 Army Navy Drive<br>
                                            Arlington<br>
                                            VA<br>
                                            <strong>22 203</strong><br>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-success">
                                <div class="panel-heading">
                                    <h3 class="text-center"><strong>Order summary</strong></h3>
                                </div>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-condensed">
                                            <thead>
                                                <tr style="color: black;background-color: #e1e1ff;">
                                                    <td><strong>Heading Names</strong></td>
                                                    <td class="text-center"><strong>Selected Months</strong></td>
                                                    <td class="text-center"><strong>Fee Paids</strong></td>
                                                    @* <td class="text-center"><strong>Total</strong></td>*@
                                                    <td class="text-right"><strong>Created Date</strong></td>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in ViewBag.FeeReceiptsTbl as List<SchoolManagement.Website.ViewModels.PreviewFeeReceiptViewModel>)
                                                {
                                                    <tr>
                                                        <td>@item.HeadingNames</td>
                                                        <td class="text-center">@item.SelectedMonths</td>
                                                        <td class="text-center">@item.FeePaid (rupees)</td>
                                                        @*<td class="text-center">@Model.TotalFee (rupees)</td>*@
                                                        <td class="text-right">@item.CreatedDate</td>
                                                    </tr>
                                                }


                                                <tr>
                                                    <td class="highrow"></td>
                                                    <td class="highrow"></td>
                                                    <td class="highrow text-center"><strong>Total:</strong></td>
                                                    <td class="highrow text-right">@Model.TotalFee</td>
                                                </tr>
                                                <tr>
                                                    <td class="emptyrow"></td>
                                                    <td class="emptyrow"></td>
                                                    <td class="emptyrow text-center"><strong>Concession %:</strong></td>
                                                    <td class="emptyrow text-right">@Model.Concession</td>
                                                </tr>
                                                <tr>
                                                    <td class="emptyrow"></td>
                                                    <td class="emptyrow"></td>
                                                    <td class="emptyrow text-center"><strong>Concession Amt:</strong></td>
                                                    <td class="emptyrow text-right">@Model.ConcessionAmt</td>
                                                </tr>
                                                <tr>
                                                    <td class="emptyrow"> </td>
                                                    <td class="emptyrow"></td>
                                                    <td class="emptyrow text-center"><strong>Old Amt:</strong></td>
                                                    <td class="emptyrow text-right">@Model.OldBalance</td>
                                                </tr>
                                                <tr>
                                                    <td class="emptyrow"> </td>
                                                    <td class="emptyrow"></td>
                                                    <td class="emptyrow text-center"><strong>Late Fee:</strong></td>
                                                    <td class="emptyrow text-right">@Model.LateFee</td>
                                                </tr>
                                                <tr>
                                                    <td class="emptyrow"> </td>
                                                    <td class="emptyrow"></td>
                                                    <td class="emptyrow text-center"><strong>Total:</strong></td>
                                                    <td class="emptyrow text-right">@ViewBag.Total</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <style>

                    .height {
                        min-height: 200px;
                    }

                    .icon {
                        font-size: 47px;
                        color: #5CB85C;
                    }

                    .iconbig {
                        font-size: 77px;
                        color: #5CB85C;
                    }

                    .table > tbody > tr > .emptyrow {
                        border-top: none;
                    }

                    .table > thead > tr > .emptyrow {
                        border-bottom: none;
                    }

                    .table > tbody > tr > .highrow {
                        border-top: 3px solid;
                    }
                </style>
                <!-- Simple Invoice - END -->
            </div>
        </div>

    </div> <!--pagination closed-->
