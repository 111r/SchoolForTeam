@{
    ViewBag.Title = "AddStaf";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .myAlert-bottom {
        position: fixed;
        bottom: 5px;
        left: 2%;
        width: 96%;
    }

    div.fullscreen {
        position: absolute;
        width: 100%;
        height: 960px;
        top: 0;
        left: 0;
        background-color: lightblue;
    }

    .alert {
        display: none;
    }
</style>
<div class="right_col" role="main">
    <div class="row">
        <!-- row started -->
        <div class="col-md-12 col-sm-12 col-xs-12">
            <!-- col-msx-12 started -->
            <div class="dashboard_graph">
                <div class="row x_title">
                    <div class="col-sm-12">
                        <div class="col-sm-6">
                            <h4 id="headingName"> Add New Staff  &nbsp;<i class="fa fa-forward"></i></h4>
                        </div>
                        <div class="col-sm-6">
                            <button class="btn btn-info pull-right"><a href="/Staf/ViewStaff" class="button_a">View All Staff </a></button>
                            <button class="btn btn-danger pull-right"><a href="/Staf/ManageStaff" class="button_a">Manage Staff</a> </button>
                        </div>
                    </div>
                </div>
            </div><!-- dashboard_graph closed-->

            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#add" class="sis_tab_a">Basic Details</a></li>
                <li><a data-toggle="tab" href="#add1" class="sis_tab_a click" id="primarytab">Primary Details</a></li>
                <li><a data-toggle="tab" href="#add2" class="sis_tab_a click_1" id="pastemploymenttab">Past Employment Details</a></li>
                <li><a data-toggle="tab" href="#add3" class="sis_tab_a click_2" id="accounttypetab">Account Type</a></li>
                <li><a data-toggle="tab" href="#add4" class="sis_tab_a click_3" id="salarydetailstab">Salary Details</a></li>
            </ul>

            <div class="row">
                @*<h4 class="std_head well-sm"> Staff Information Form</h4>*@
                <form method="post" action="/Staf/AddStaf" id="StaffForm" enctype="multipart/form-data">
                    <div class="tab-content tab_sis">
                        <div class="tab-pane fade in active" id="add">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h4 class="std_head well-sm">Basic Details</h4>
                                    <div class="col-sm-6" style="border-right:1px solid #eee;">
                                        <div class="form-group">
                                            <label>Employee ID :</label>
                                            <div>
                                                <input type="hidden" name="StafId" id="StafId" class="form-control">
                                                <input type="text" name="EmpId" id="EmpId" value="@ViewBag.EmpId" readonly class="form-control" style="margin-bottom:13px;">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>Name :</label>
                                            <input type="text" name="Name" id="Name" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Gender :</label>
                                            <label class="radio-inline"><input checked type="radio" id="GenderMale" name="Gender" value="Male">Male</label>
                                            <label class="radio-inline"><input type="radio" id="GenderFemale" name="Gender" value="Female">Female</label>
                                        </div>
                                        <div class="form-group">
                                            <label>Date of Birth :</label>
                                            <input type="text" name="DOB" placeholder="dd/mm/yyyy" id="Dateofbirth" class="form-control datepicker" readonly>
                                        </div>
                                        <div class="form-group">
                                            <label>Employee Code</label>
                                            <input type="text" id="EmployeeCode" class="form-control" name="EmployeeCode" placeholder="EmployeeCode" />
                                        </div>
                                        <div class="form-group">
                                            <label>UAN</label>
                                            <input type="text" id="UIN" class="form-control" name="UIN" placeholder="UAN" />
                                        </div>
                                        <div class="form-group">
                                            <label>Email  : </label>
                                            <input type="text" name="Email" id="Email" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Contact No  : </label>
                                            <input type="number" name="Contact" id="Contact" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Upload Image</label>
                                            <input type="file" id="File" name="File" />
                                        </div>
                                        <div class="form-group">
                                            <label>Upload Staff Signature</label>
                                            <input type="file" id="StaffSignatureFile" name="StaffSignatureFile" />
                                        </div>
                                        <div class="form-group">
                                            <label>Religion  : </label>
                                            @Html.DropDownList("Religion", new SelectList(ViewBag.Religion, "DataListItemName", "DataListItemName"), "Select", new { @id = "Religion", @class = "form-control" })

                                        </div>
                                        <div class="form-group">
                                            <label>Community : </label>
                                            <br />
                                            @Html.DropDownList("Category", new SelectList(ViewBag.Category, "DataListItemName", "DataListItemName"), "Select", new { @id = "Category", @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Caste  : </label>
                                            @Html.DropDownList("Caste", new SelectList(ViewBag.Caste, "DataListItemName", "DataListItemName"), "Select", new { @id = "Caste", @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Address  : </label>
                                            <textarea name="Address" id="Address" class="form-control"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>IsActive  : </label>
                                            <input type="hidden" id="IsActive" name="IsActive">
                                            <input type="checkbox" id="IsActivechk" name="IsActivechk" checked>
                                        </div>
                                        <div class="form-group">
                                            <label>Staff-Type  : </label>
                                            @Html.DropDownList("StaffCategory", new SelectList(ViewBag.StaffCategory, "DataListItemId", "DataListItemName"), "Select", new { @id = "StaffCategory", @class = "form-control" })
                                        </div>
                                        <button type="button" id="Basicdetails" class="btn btn-info pull-right">Next</button>
                                        @*<a data-toggle="tab" href="#add1" class="btn btn-success pull-right">Next</a>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="add1" class="tab-pane fade">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h4 class="std_head well-sm">Primary Details</h4>
                                    <div class="col-sm-6" style="border-right: 1px solid #eee;">
                                        <div class="form-group">
                                            <label>Father's/Husband's Name :</label>
                                            <input type="text" id="FatherOrHusbandName" name="FatherOrHusbandName" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Married Status : </label>
                                            <br />
                                            <label class="radio-inline"><input type="radio" checked id="MariedStatus1" name="MariedStatus" value="Married">Married</label>
                                            <label class="radio-inline"><input type="radio" id="MariedStatus2" name="MariedStatus" value="Unmarried">Unmarried</label>
                                            <label class="radio-inline"><input type="radio" id="MariedStatus3" name="MariedStatus" value="Widow">Widow</label>
                                        </div>
                                        <div class="form-group">
                                            <label>Highest Educational Qualification :</label>
                                            @Html.DropDownList("Qualification", new SelectList(ViewBag.AllQualifications, "DataListItemName", "DataListItemName"), "select", new { @id = "qualification", @class = "form-control" })
                                            <div>

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>Work Experience :</label>
                                            <input type="text" name="WorkExperience" id="WorkExperience" class="form-control" placeholder="years" />
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Children (if there are children)  :</label>
                                            <input type="text" id="Children" name="Children" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Adhar No.  : </label>
                                            <input name="AdharNo" id="AdharNo" type="text" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Adhar Document.  : </label>
                                            <input type="file" name="AdharFile" style="padding:0px;" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Pan No.  : </label>
                                            <input name="PanNo" id="PanNo" type="text" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Pan Document.  : </label>
                                            <input type="file" name="PanFile" style="padding:0px;" class="form-control">
                                        </div>
                                        <button type="button" id="primarydetails" class="btn btn-info pull-right">Next</button>
                                        @*<a data-toggle="tab" class="btn btn-success pull-right" href="#add2">Next</a>*@

                                    </div>
                                </div>
                            </div>
                            
                        </div>

                        <div class="tab-pane fade" id="add2">
                            <div class="row">
                                <div class="col-sm-12" style="border-bottom: 1px solid #E6E9ED;">
                                    <h4 class="std_head well-sm">Past Employment Details</h4>
                                    <div class="col-sm-6" style="border-right: 1px solid #eee;">
                                        <div class="form-group">
                                            <label>Last Organization of Employment / Service :</label>
                                            <input type="text" id="LastOrganizationofEmployment" name="LastOrganizationofEmployment" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>No of Years at the Last Assignment :</label>
                                            <input type="text" id="NoofYearsattheLastAssignment" name="NoofYearsattheLastAssignment" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label>Exit Formalities Completed ? : </label>
                                            <br />
                                            <label class="radio-inline"><input type="radio" checked id="FormalitiesCheck1" name="FormalitiesCheck" value="Yes">Yes</label>
                                            <label class="radio-inline"><input type="radio" id="FormalitiesCheck2" name="FormalitiesCheck" value="No">No</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <h5 style="color: #1ABB9C;">Does to be attached </h5>
                                        <div class="form-group">
                                            <label>Relieving Letter ( Add a scanned copy ) : </label>
                                            <input type="file" id="RelievingLetter" name="RelievingLetter" />
                                        </div>
                                        <div class="form-group">
                                            <label>Performance Letter / Certificate ( Add a scanned copy ) :</label>
                                            <input type="file" id="PerformanceLetter" name="PerformanceLetter" />
                                        </div>
                                        @*<a data-toggle="tab" class="btn btn-success" href="#add3">Next</a>*@
                                        <button type="button" id="pastschool" class="btn btn-info pull-right">Next</button>

                                    </div>
                                </div>
                            </div>
                            
                        </div>

                        <div id="add3" class="tab-pane fade">
                            <div class="row">
                                <div class="col-sm-12" style="border-bottom: 1px solid #E6E9ED;">
                                    <h4 class="std_head well-sm">Account Type</h4>
                                    <div class="col-sm-6" style="border-right: 1px solid #eee;">
                                        <div class="form-group">
                                            <label>Select AccountType</label>
                                            <select class="form-control" id="Employee_AccountId" name="Employee_AccountId" required>
                                                <option value="0">---Select AccoutType---</option>
                                                @foreach (var item in ViewBag.AccountType as IEnumerable<SchoolManagement.Website.Models.Tbl_AccountType>)
                                                {
                                                    <option value="@item.Account_TypeId">@item.Account_Typename</option>
                                                }
                                            </select>
                                            <input type="text" id="Employee_AccountName" name="Employee_AccountName" style="display:none" />
                                        </div>
                                        <div class="form-group">
                                            <label>Designation</label>
                                            <input type="text" id="Employee_Designation" name="Employee_Designation" class="form-control"/>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Select Category</label>
                                            <select class="form-control" id="Category_Id" name="Category_Id">
                                                <option value="0">---Select Category---</option>
                                                @foreach (var item in ViewBag.CategoryList as IEnumerable<SchoolManagement.Website.Models.Tbl_StaffCategory>)
                                                {
                                                    <option value="@item.Staff_Category_Id">@item.Category_Name</option>
                                                }
                                            </select>
                                            <input type="text" id="Staff_CategoryName" name="Staff_CategoryName" style="display:none" />
                                        </div>

                                        <button type="button" id="accounttype" class="btn btn-info pull-right">Next</button>

                                    </div>
                                </div>
                            </div>
                            
                        </div>

                        <div class="tab-pane fade" id="add4">
                            <div class="row">
                                <div class="col-sm-12" style="border-bottom: 1px solid #E6E9ED;">
                                    <h4 class="std_head well-sm">Salary Details</h4>
                                    <div class="col-sm-6" style="border-right: 1px solid #eee;">
                                        <div class="form-group">
                                            <label>Date of Employment : </label>
                                            <input type="text" name="EmpDate" placeholder="dd/mm/yyyy" id="EmpDate" class="form-control datepicker" readonly required>
                                        </div>
                                        <div class="form-group">
                                            <label>Date of Relieving :</label>
                                            <input type="text" id="DateofReliving" name="DateofReliving" class="form-control datepicker" readonly>
                                        </div>
                                        <div class="form-group">
                                            <label>Bank Name :</label>
                                            <input type="text" id="Bank_Name" name="Bank_Name" class="form-control">
                                        </div>

                                        <h5 style="color: #1ABB9C;">Salary </h5>
                                        <div class="col-sm-4">
                                            <!-- col-sm-4 started -->
                                            <div class="form-group">
                                                <label>Basic:</label>
                                                <input type="text" name="BesicSallery" id="BesicSallery" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <!-- col-sm-4 started -->
                                            <div class="form-group">
                                                <label>Perks:</label>
                                                <input type="text" name="PerksSallery" id="PerksSallery" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <!-- col-sm-4 started -->
                                            <div class="form-group">
                                                <label>Gross:</label>
                                                <input type="text" name="GrossSallery" id="GrossSallery" class="form-control">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <h5 style="color: #1ABB9C;">Salary </h5>
                                        <div class="col-sm-4">
                                            <!-- col-sm-4 started -->
                                            <div class="form-group">
                                                <label>Basic:</label>
                                                <input type="text" name="BesicSallery1" id="BesicSallery1" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <!-- col-sm-4 started -->
                                            <div class="form-group">
                                                <label>Perks:</label>
                                                <input type="text" name="PerksSallery1" id="PerksSallery1" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <!-- col-sm-4 started -->
                                            <div class="form-group">
                                                <label>Gross:</label>
                                                <input type="text" name="GrossSallery1" id="GrossSallery1" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <!-- col-sm-4 started -->
                                            <div class="form-group">
                                                <label>Account Number :</label>
                                                <input type="text" name="Account_No" id="Account_No" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <!-- col-sm-4 started -->
                                            <div class="form-group">
                                                <label>IFSC:</label>
                                                <input type="text" name="IFSC_Code" id="IFSC_Code" class="form-control">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-success" value="Submit Form" id="btnstafsave">Save</button>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- col-msx-12  closed -->
                </form>
            </div>
        </div><!-- col-msx-12  closed -->
    </div><!-- 1st row closed -->
</div>


@section scripts{
    <script src="~/Scripts/DevelopmentJS/AddStaffDetails.js"></script>
  
}