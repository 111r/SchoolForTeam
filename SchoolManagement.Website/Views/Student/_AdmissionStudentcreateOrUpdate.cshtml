                                <input type="text" name="FamilyDetail.NoOfBrothers" id="NoOfBrothers" class="form-control">
                            </div>*@
                </div><!-- col-sm-6 closed -->
                <div class="col-sm-6">
                    <!-- col-sm-6 started -->
                    <h5 style="color: #1ABB9C;">Mother's Details </h5>
                    <div class="form-group">
                        <label>Mother’s Name  : </label>
                        <input type="text" name="FamilyDetail.MotherName" id="MotherName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Qualifications  : </label>
                        <input type="text" name="FamilyDetail.MQualifications" id="MQualifications" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Occupation  : </label>
                        <input type="text" name="FamilyDetail.MOccupation" id="MOccupation" class="form-control">
                    </div>
                    @*<div class="form-group">
                             <label>Organization  : </label>
                             <input type="text" name="FamilyDetail.MOrganization" id="MOrganization" class="form-control">
                         </div>
                        <div class="form-group">
                                 <label>Phone : </label>
                                 <input type="text" name="FamilyDetail.MPhone" id="MPhone" class="form-control">
                             </div>
                             <div class="form-group">
                                 <label>Mobile : </label>
                                 <input type="text" name="FamilyDetail.MMobile" id="MMobile" class="form-control">
                             </div>
                             <div class="form-group">
                                 <label>E Mail : </label>
                                 <input type="text" name="FamilyDetail.MEMail" id="MEMail" class="form-control">
                             </div>
                             <div class="form-group">
                                 <label>Annual Income : </label>
                                 <input type="text" name="FamilyDetail.MAnnualIncome" id="MAnnualIncome" class="form-control">
                             </div>
                             <div class="form-group">
                                 <label>No.Of Sisters </label>
                                 <input type="text" name="FamilyDetail.NoOfSisters" id="NoOfSisters" class="form-control">
                             </div>*@
                </div><!-- col-sm-6 closed -->

            </div><!-- col-sm-12 closed -->
            <div class="col-sm-12" style="border-bottom: 1px solid #E6E9ED;">
                <!-- col-sm-12 started -->
                <h4 class="std_head well-sm">Address</h4>
                <div class="col-sm-6">
                    <!-- col-sm-6 started -->
                    <div class="form-group">
                        <label>Residential Address  : </label>
                        <textarea type="text" name="FamilyDetail.FResidentialAddress" id="FResidentialAddress" class="form-control"></textarea>
                    </div>

                </div><!-- col-sm-6 closed -->
                <div class="col-sm-6">
                    <!-- col-sm-6 started -->
                    <div class="form-group">
                        <label>Permanent Address : </label>
                        <textarea type="text" name="FamilyDetail.MPermanentAddress" id="MPermanentAddress" class="form-control"></textarea>
                    </div>

                </div><!-- col-sm-6 closed -->
