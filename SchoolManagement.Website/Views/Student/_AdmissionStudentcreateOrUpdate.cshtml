@model SchoolManagement.Website.ViewModels.StudentAdmissionViewModel

<div class="row">
    <!-- col-sm-12 started -->

    <div class="col-sm-12" style="border-top: 1px solid #E6E9ED;">
        <!-- col-sm-12 started -->
        <h4 class="std_head well-sm"> Student Details</h4>
        <div class="col-sm-6" style="border-right: 1px solid #eee;">
            <!-- col-sm-6 started -->
            <div class="form-group">
                <img src="~/WebsiteImages/images/user.png" alt="Affix recent passport size <br/> photograph of student." style="margin-bottom:10px;" class="img-thumbnail" />
                @*<input type="file" id="File" name="ProfileAvatar" style="margin-bottom:20px;" accept=".jpg,.png" />*@
                @Html.TextBoxFor(m => m.ProfileAvatar, new { type = "file", style = "margin-bottom:20px", accept = ".jpg,.png" })
                @Html.ValidationMessageFor(m => m.ProfileAvatar)
                <label type="text" id="FileLbl" name="ProfileAvatar"></label>
            </div>
            <div class="form-group">
                <label>Name :</label>
                @*<input type="text" name="Name" id="SName" required class="form-control">*@
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
                @Html.HiddenFor(x => x.StudentId)
                @*<input type="hidden" name="StudentId" id="StudentId">*@
            </div>
            <div class="form-group">
                <label>Class :</label>
                @*@Html.DropDownList("Student.Class", ViewBag.Classes as SelectList, "Select", new { @class = "form-control" })*@
                @Html.DropDownListFor(x => x.Class, new SelectList(ViewBag.Class, "DataListItemName", "DataListItemName"), "select", new { @id = "Class", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Class)
            </div>

            <div class="form-group">
                <label>Gender:</label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(x => x.Gender, "Male", new { @checked = "checked" }) Male
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(x => x.Gender, "Female")Female
                </label>
            </div>
            <div class="form-group">
                <label>Date of Birth :</label>
                @*<input type="text" name="DOB" id="DOB" class="form-control datepicker" readonly>*@
                @Html.TextBoxFor(x => x.DOB, new { @class = "form-control datepicker", @readonly = "readonly" })
                @Html.ValidationMessageFor(m => m.DOB)

            </div>
            <div class="form-group">
                <label>Place of Birth : </label>
                @*<input type="text" name="POB" id="POB" class="form-control">*@
                @Html.TextBoxFor(x => x.POB, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.POB)

            </div>
            <div class="form-group">
                <label>Nationality  : </label>
                @*<input type="text" name="Nationality" id="Nationality" class="form-control">*@
                @Html.TextBoxFor(x => x.Nationality, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nationality)

            </div>

            <div class="form-group">
                <label>Mother tongue  : </label>
                @*<input type="text" name="MotherTongue" id="MotherTongue" class="form-control">*@
                @Html.TextBoxFor(x => x.MotherTongue, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MotherTongue)


            </div>
            <div class="form-group">
                <label>Religion  : </label>
                @Html.DropDownListFor(x => x.Religion, new SelectList(ViewBag.Religion, "DataListItemName", "DataListItemName"), "select", new { @id = "Religion", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Religion)

            </div>
        </div><!-- col-sm-6 closed -->
        <div class="col-sm-6">
            <!-- col-sm-6 started -->

            <div class="form-group">
                <label>Community : </label>
                <br />
                @Html.DropDownListFor(x => x.Category, new SelectList(ViewBag.Category, "DataListItemName", "DataListItemName"), "select", new { @id = "Category", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Category)

                @*@Html.DropDownList("Student.Category", ViewBag.Category as SelectList, "Select", new { @class = "form-control" })*@

            </div>
            <div class="form-group">
                <label>Caste  : </label>
                @Html.DropDownListFor(x => x.Caste, new SelectList(ViewBag.Caste, "DataListItemName", "DataListItemName"), "select", new { @id = "Caste", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Caste)

                @*@Html.DropDownList("Student.Caste", ViewBag.Caste as SelectList, "Select", new { @class = "form-control" })*@

            </div>

            <div class="form-group">
                <label>Blood Group  : </label>
                @Html.DropDownListFor(x => x.BloodGroup, new SelectList(ViewBag.BloodGroup, "DataListItemName", "DataListItemName"), "select", new { @id = "BloodGroup", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.BloodGroup)

            </div>
            <div class="form-group">
                <label>Email  : </label>
                @*<input type="text" name="Nationality" id="Nationality" class="form-control">*@
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)

            </div>
            <div class="form-group">
                <label>Name of the school last studied  : </label>
                @*<input type="text" name="Nationality" id="Nationality" class="form-control">*@
                @Html.TextBoxFor(x => x.LaststudiedSchoolName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LaststudiedSchoolName)

            </div>
        </div><!-- col-sm-6 closed -->
        <div class="row">
            <!-- col-sm-12 started -->
            <div class="col-sm-12" style="border-bottom: 1px solid #E6E9ED;">
                <!-- col-sm-12 started -->
